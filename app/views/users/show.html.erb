


<div class="userview">
    <div id="userdetails">
        <p>Username: <%= @user.username %></p>
    
        <p>Favorite Wine: <%= @user.favorite_wine %></p> 
        
        <p><%= @user.username %>'s Wine Reviews</p>
        <ul id="reviewsul">
        <% @user.reviews.each do |details| %>
            <li>
            <%= details.title %>
            <%= link_to "view review", review_path(details) %>
            </li>
            <%end%>
           </ul>

    <div id="useredit" class="alllinks">
        <% if @user == current_user %>
        

        <p><%= link_to "Edit Info", edit_user_path(@user) %> </p>
        <br>
        <p><%= link_to "Add Wine", new_wine_path %> </p>
        

        <% end %>
    </div>
</div>

<div class="sidebarright">
    <h3><%=@user.username%>'s Favorite Reviews: </h3>
    <ul>
    
    <% @user.likes.uniq.each do |l| %>
        <li>
        <p><%= link_to l.title, review_path(l) %></p>
    
    
        </li>
        <%end%>
    </ul>
</div>