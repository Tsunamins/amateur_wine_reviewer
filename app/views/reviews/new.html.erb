<%= render partial: 'layouts/errors', locals: {object: @review}  %>
<div class="userview">

<%= form_for @review do |f| %>
<% if params[:wine_id] %>
        <%= f.hidden_field :wine_id %>
       <%= @wine.wine_name %>
       <% end %> 
        
 
    <div class="review desc">
        
        <%= f.text_field :title, placeholder: "Name this review..."%> 
            <br>   
        <%= f.text_field :description, placeholder: "Describe the wine summarizing overall reflections and tasting notes..." %>
            <br>
        <%= f.text_field :fruit, placeholder: "Note fruit impressions..."%> 
            <br>
        <%= f.text_field :tannin, placeholder: "Note tannin impressions..."%> 
            <br> 
        
        <%= f.select :body, options_for_select(["light - aka 'skim milk'", "medium - aka '2% milk'", "heavy - aka 'whole milk"]), prompt: 'Select Body'  %> 
            <br> 
        <%= f.text_field :balance, placeholder: "Notes on overall balance and finish..."%> 
            <br>
        <%= f.text_field :acidity, placeholder: "Note acidity impressions..."%> 
            <br>
        <%= f.text_field :flavors, placeholder: "Note tastes, flavors, scents, etc..."%> 
            <br>
        <%= f.text_field :other, placeholder: "Note anything else you would like..."%> 
            <br>
    </div>
        

    <div class="review rating">
        <h4>Rate the Wine - Rate each category 1 through 5</h4>        
        
        <%= f.number_field :color, placeholder: "Give a color rating" %>
        <br>
        
        <%= f.number_field :taste, placeholder: "Rate the tastes" %>
        <br>
        
        <%= f.number_field :balance_rating, placeholder: "Rate the balance" %>
        <br>
        
        <%= f.number_field :wine_experience, placeholder: "Rate the overall wine experience" %>
        <br>
        
        <%= f.number_field :someone_else_like, placeholder: "Even if you don't like it, could someone else?" %>
        <br>
        
    </div>

  <%= f.submit%>
  

<% end %>
</div>